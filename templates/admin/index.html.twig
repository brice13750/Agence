{% extends 'base.html.twig' %}

{% block title %}Admin{% endblock %}

{% block body %}
<h1 class="text-center my-3">Administration</h1>
<a class="btn btn-primary my-3 ml-2" href="{{ path('admin_add') }}">Ajouter une annonce</a>

<div class="container-fluid">
    <table class="table table-striped">
    <thead>
        <tr>
        <th scope="col">Ville</th>
        <th scope="col">Titre</th>
        <th scope="col">Surface</th>
        <th scope="col">Pièce</th>
        <th scope="col">Chambre</th>
        <th scope="col">Etage</th>
        <th scope="col">Prix</th>
        <th scope="col">Date</th>
        <th scope="col">Type</th>
        <th scope="col">Edition...</th>
        </tr>
    </thead>
    <tbody>
    {% for ad in ads %}
        <tr>
        <th scope="col">{{ ad.city }}</th>
        <th scope="col">{{ ad.title }}</th>
        <th scope="col">{{ ad.area }} m²</th>
        <th scope="col">{{ ad.rooms }}</th>
        <th scope="col">{{ ad.bedrooms }}</th>
        <th scope="col">{{ ad.floor }}</th>
        <th scope="col">{{ ad.price }}</th>
        <th scope="col">{{ ad.createdAt|date('d-m-y') }}</th>
        <th scope="col">{{ ad.type }}</th>
        <th scope="col">
        <a href="{{ path('show_ad', {'id': ad.id}) }}"><i class="fas fa-eye"></i></a>
        <a href="{{ path('admin_edit', {'id': ad.id}) }}"><i class="fas fa-edit"></i></a>
        <a href="{{ path('admin_delete', {'id': ad.id}) }}" onclick="confirm('Êtes-vous vraiment sûr ?');"><i class="fas fa-trash-alt"></i></a>
        </th>
        </tr>
    {% endfor %}
    </tbody>
    </table>
</div>
{% endblock %}
