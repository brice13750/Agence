{% block title %}Accueil{% endblock %}

{% block body %}
<div class="container">
	<h1 class="text-center">Nos d√®rnieres annonces</h1>
	<div class="row">
		{% for ad in ads %}
			<div class="col-4">
				<div class="card m-4" style="width: 18rem;">
					<img class="card-img-top" src="{{ad.picture}}" alt="Image Annonce">
